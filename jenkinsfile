pipeline{
	agent any
	stages{
		stage("build"){
			steps{
				script{
					bat '''
					cd C:\\Users\\rselc\\Desktop\\Works\\k8s
					docker-compose build python
					docker-compose push python
					'''
				}
			}
		}
		stage("deploy"){
			steps{
				script{
					bat '''
					kubectl apply -f Desktop\\Works\\k8s\\kubernetes\\deployments\\deployment.yaml
					'''
				}
			}
		}
	}
}