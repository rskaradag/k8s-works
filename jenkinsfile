pipeline{
	agent any
	stages{
		stage("Build"){
			steps{
				script{
					bat '''
					cd C:\\Users\\rselc\\Desktop\\Works\\k8s
					docker-compose build python
					whoami
					'''
				}
			}
		}
		stage("Push"){
			steps{
				script{
					docker.withRegistry( 'https://registry.hub.docker.com', 'rsk-dockerhub' ) {
							dockerImage.push("$BUILD_NUMBER")
							dockerImage.push('latest')
						}
				}
			}
		}
		stage("Deploy"){
			steps{
				script{
					bat '''
					kubectl apply -f Desktop\\Works\\k8s\\kubernetes\\deployments\\deployment.yaml
					'''
				}
			}
		}
	}
}